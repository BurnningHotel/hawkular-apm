        ],
        "location": "EXIT",
        "condition": "isActive()",
        "actions": [{
          "type": "SetState",
          "contextExpression": "$!",
          "name": "sql",
          "valueExpression": "$1",
          "session": true
        }]
      },{
        "ruleName": "Java JDBC Prepared Query Component Start",
