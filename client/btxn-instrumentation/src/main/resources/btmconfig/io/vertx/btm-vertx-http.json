{
  "instrumentation": {
    "io.vertx.core.http": {
      "description": "Vertx HTTP instrumentation",
      "rules": [{
        "ruleName": "Vertx HTTP Consumer Start",
        "className": "^io.vertx.core.http.impl.HttpServerRequestImpl",
        "methodName": "<init>",
        "parameterTypes": [
          "*"
        ],
        "location": "EXIT",
        "condition": "activate($0.absoluteURI(),$0.getHeader(\"HawkularBTID\"))",
        "actions": [{
          "type": "SetName",
          "nameExpression": "$0.getHeader(\"HawkularBTName\")"
        },{
          "type": "InstrumentConsumer",
          "direction": "Request",
          "endpointTypeExpression": "\"HTTP\"",
          "uriExpression": "$0.absoluteURI()",
          "idExpression": "$0.getHeader(\"Hawkular-btid\")"
        },{
          "type": "SetDetail",
          "name": "btm_source",
          "valueExpression": "\"io.vertx.core.http\""
        },{
          "type": "SetDetail",
          "name": "remoteAddr",
          "valueExpression": "$0.remoteAddress()"
        },{
          "type": "SetDetail",
          "name": "http-method",
          "valueExpression": "$0.method()"
        }]
      },{
        "ruleName": "Vertx HTTP Consumer Start Values",
        "className": "^io.vertx.core.http.impl.HttpServerRequestImpl",
        "methodName": "handleData",
        "parameterTypes": [
          "*"
        ],
        "location": "ENTRY",
        "condition": "isActive()",
        "actions": [{
          "type": "ProcessContent",
          "direction": "Request",
          "headersExpression": "getHeaders(\"io.vertx.core.MultiMap\",$0.headers())",
          "valueExpressions": [
            "$1"
          ]
        }]
      },{
        "ruleName": "Vertx HTTP Consumer End",
        "interfaceName": "^io.vertx.core.http.HttpServerResponse",
        "methodName": "end",
        "parameterTypes": [
          "io.vertx.core.buffer.Buffer"
        ],
        "location": "ENTRY",
        "condition": "isActive()",
        "actions": [{
          "type": "ProcessContent",
          "direction": "Response",
          "valueExpressions": [
            "$1"
          ]
        },{
          "type": "InstrumentConsumer",
          "direction": "Response",
          "endpointTypeExpression": "\"HTTP\""
        },{
          "type": "AssertComplete"
        }]
      },{
        "ruleName": "Vertx HTTP Producer Start 1",
        "className": "^io.vertx.core.http.impl.HttpClientRequestImpl",
        "methodName": "end",
        "parameterTypes": [
          "io.vertx.core.buffer.Buffer"
         ],
        "location": "ENTRY",
        "binds": [{
          "name": "id",
          "type": "java.lang.String",
          "expression": "createUUID()"
        },{
          "name": "uri",
          "type": "java.lang.String",
          "expression": "new java.net.URL(\"http\",$0.host,$0.port,$0.request.getUri())"
        }],
        "condition": "activate(uri)",
        "actions": [{
          "type": "InstrumentProducer",
          "direction": "Request",
          "endpointTypeExpression": "\"HTTP\"",
          "uriExpression": "uri",
          "idExpression": "id"
        },{
          "type": "ProcessContent",
          "direction": "Request",
          "headersExpression": "getHeaders(\"io.vertx.core.MultiMap\",$0.headers())",
          "valueExpressions": [
            "$1"
          ]
        },{
          "type": "InitiateLink",
          "idExpression": "\"io.vertx.core.http-\"+$0.hashCode()"
        },{
          "type": "SetDetail",
          "name": "btm_source",
          "valueExpression": "\"io.vertx.core.http\""
        },{
          "type": "SetDetail",
          "name": "http_method",
          "valueExpression": "$0.method()"
        },{
          "type": "FreeFormAction",
          "action": "$0.putHeader(\"Hawkular-btid\",id)"
        },{
          "type": "FreeFormAction",
          "action": "$0.putHeader(\"Hawkular-btname\",getBusinessTransactionName())"
        }]
      },{
        "ruleName": "Vertx HTTP Producer Start 2",
        "className": "^io.vertx.core.http.impl.HttpClientRequestImpl",
        "methodName": "end",
        "parameterTypes": [
        ],
        "location": "ENTRY",
        "binds": [{
          "name": "id",
          "type": "java.lang.String",
          "expression": "createUUID()"
        },{
          "name": "uri",
          "type": "java.lang.String",
          "expression": "new java.net.URL(\"http\",$0.host,$0.port,$0.request.getUri())"
        }],
        "condition": "activate(uri)",
        "actions": [{
          "type": "InstrumentProducer",
          "direction": "Request",
          "endpointTypeExpression": "\"HTTP\"",
          "uriExpression": "uri",
          "idExpression": "id"
        },{
          "type": "ProcessContent",
          "direction": "Request",
          "headersExpression": "getHeaders(\"io.vertx.core.MultiMap\",$0.headers())"
        },{
          "type": "InitiateLink",
          "idExpression": "\"io.vertx.core.http-\"+$0.hashCode()"
        },{
          "type": "SetDetail",
          "name": "btm_source",
          "valueExpression": "\"io.vertx.core.http\""
        },{
          "type": "SetDetail",
          "name": "http_method",
          "valueExpression": "$0.method()"
        },{
          "type": "FreeFormAction",
          "action": "$0.putHeader(\"Hawkular-btid\",id)"
        },{
          "type": "FreeFormAction",
          "action": "$0.putHeader(\"Hawkular-btname\",getBusinessTransactionName())"
        }]
      },{
        "ruleName": "Vertx HTTP Producer End",
        "className": "^io.vertx.core.http.impl.HttpClientRequestImpl",
        "methodName": "handleResponse",
        "parameterTypes": [
          "io.vertx.core.http.impl.HttpClientResponseImpl"
        ],
        "location": "ENTRY",
        "condition": "isLinkActive(\"io.vertx.core.http-\"+$0.hashCode())",
        "actions": [{
          "type": "CompleteLink",
          "idExpression": "\"io.vertx.core.http-\"+$0.hashCode()"
        },{
          "type": "InstrumentProducer",
          "direction": "Response",
          "endpointTypeExpression": "\"HTTP\""
        }]
      },{
        "ruleName": "Vertx HTTP Producer Async Request Thread Complete",
        "className": "^io.vertx.core.http.impl.HttpClientRequestImpl",
        "methodName": "write",
        "parameterTypes": [
          "io.netty.buffer.ByteBuf",
          "boolean"
         ],
        "location": "EXIT",
        "condition": "isActive()",
        "actions": [{
          "type": "Unlink"
        }]
      },{
        "ruleName": "Vertx HTTP Producer Async Response Thread Complete",
        "className": "^io.vertx.core.http.impl.HttpClientRequestImpl",
        "methodName": "handleResponse",
        "parameterTypes": [
          "io.vertx.core.http.impl.HttpClientResponseImpl"
        ],
        "location": "EXIT",
        "condition": "isActive()",
        "actions": [{
          "type": "Unlink"
        }]
      }]
    }
  }
}