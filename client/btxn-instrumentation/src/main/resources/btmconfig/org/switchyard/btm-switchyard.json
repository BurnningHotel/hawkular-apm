{
  "instrumentation": {
    "org.switchyard": {
      "description": "SwitchYard instrumentation",
      "rules": [{
        "ruleName": "SwitchYard Service Start",
        "className": "^org.switchyard.runtime.event.ExchangeInitiatedEvent",
        "methodName": "<init>",
        "parameterTypes": [
          "org.switchyard.Exchange"
        ],
        "location": "ENTRY",
        "condition": "activate($1.getConsumer().getName())",
        "actions": [{
          "type": "InstrumentComponent",
          "direction": "In",
          "uriExpression": "$1.getConsumer().getName()",
          "operationExpression": "$1.getContract().getConsumerOperation().getName()"
        },{
          "type": "ProcessHeaders",
          "direction": "In",
          "originalType": "org.switchyard.Context",
          "headersExpression": "$1.getMessage().getContext()"
        },{
          "type": "ProcessContent",
          "direction": "In",
          "valueExpressions": [
            "$1.getMessage().getContent()"
          ]
        },{
          "type": "SetDetail",
          "name": "btm_source",
          "valueExpression": "\"org.switchyard\""
        },{
          "type": "SetDetail",
          "name": "internal",
          "valueExpression": "\"\"+!$1.getConsumer().getServiceMetadata().getRegistrant().isBinding()"
        }]
      },{
        "ruleName": "SwitchYard Service Normal End",
        "className": "^org.switchyard.runtime.event.ExchangeCompletionEvent",
        "methodName": "<init>",
        "parameterTypes": [
          "org.switchyard.Exchange"
        ],
        "location": "ENTRY",
        "binds": [{
          "name": "content",
          "type": "java.lang.Object",
          "expression": "$1.getMessage().getContent()"
        }],
        "condition": "isActive() && !isInstanceOf(content,java.lang.Throwable.class)",
        "actions": [{
          "type": "ProcessHeaders",
          "direction": "Out",
          "originalType": "org.switchyard.Context",
          "headersExpression": "$1.getMessage().getContext()"
        },{
          "type": "ProcessContent",
          "direction": "Out",
          "valueExpressions": [
            "content"
          ]
        },{
          "type": "InstrumentComponent",
          "direction": "Out",
          "uriExpression": "$1.getConsumer().getName()",
          "operationExpression": "$1.getContract().getConsumerOperation().getName()"
        }]
      },{
        "ruleName": "SwitchYard Service Fault End",
        "className": "^org.switchyard.bus.camel.CamelExchange",
        "methodName": "sendFault",
        "parameterTypes": [
          "org.switchyard.Message"
        ],
        "location": "ENTRY",
        "binds": [{
          "name": "content",
          "type": "java.lang.Object",
          "expression": "$1.getContent()"
        }],
        "condition": "isActive()",
        "actions": [{
          "type": "SetFault",
          "nameExpression": "faultName(content)",
          "descriptionExpression": "faultDescription(content)"
        },{
          "type": "ProcessContent",
          "direction": "Out",
          "valueExpressions": [
            "content"
          ]
        },{
          "type": "InstrumentComponent",
          "direction": "Out",
          "uriExpression": "$0.getConsumer().getName()"
        }]
      }]
    }
  }
}
