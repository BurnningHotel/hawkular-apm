{
  "businessTransactions": {
    "testhttp": {
      "description": "Configuration for HTTP tests",
      "filter": {
        "inclusions": [
          "/sayHello"
        ]
      },
      "processors": [{
        "nodeType": "Producer",
        "direction": "In",
        "uriFilter": "/sayHello",
        "actions": [{
          "name": "hello",
          "actionType": "SetDetail",
          "expression": "\"Hello World\""
        },{
          "name": "all",
          "actionType": "AddContent",
          "expression": "Text.serialize(values[0])"
        }]
      },{
        "nodeType": "Producer",
        "direction": "Out",
        "uriFilter": "/sayHello",
        "actions": [{
          "name": "all",
          "actionType": "AddContent",
          "expression": "Text.serialize(values[0])"
        }]
      }]
    }
  }
}