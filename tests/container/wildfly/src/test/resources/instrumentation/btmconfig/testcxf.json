{
  "businessTransactions": {
    "testcxf": {
      "description": "Configuration for Wildfly Camel CXF tests",
      "filter": {
        "inclusions": [
          "http://127.0.0.1:8080/camel-example-cxftomcat/webservices/incident"
        ]
      },
      "processors": [{
        "nodeType": "Consumer",
        "direction": "In",
        "uriFilter": "http://127.0.0.1:8080/camel-example-cxftomcat/webservices/incident",
        "actions": [{
          "name": "all",
          "actionType": "AddContent",
          "expression": "new String(values[0])"
        }]
      },{
        "nodeType": "Consumer",
        "direction": "Out",
        "uriFilter": "http://127.0.0.1:8080/camel-example-cxftomcat/webservices/incident",
        "actions": [{
          "name": "all",
          "actionType": "AddContent",
          "expression": "new String(values[0])"
        }]
      }]
    }
  }
}
