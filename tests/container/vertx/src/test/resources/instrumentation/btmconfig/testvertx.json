{
  "businessTransactions": {
    "testvertx-end-to-end": {
      "description": "Configuration for Vertx End to End tests",
      "filter": {
        "inclusions": [
          "http://localhost:8080/hello_end_to_end"
        ]
      }
    },
    "testvertx-http": {
      "description": "Configuration for Vertx HTTP tests",
      "filter": {
        "inclusions": [
          "http://localhost:8080/hello_get",
          "http://localhost:8080/hello_put",
          "http://localhost:8080/hello_post"
        ]
      },
      "processors": [{
        "nodeType": "Consumer",
        "direction": "In",
        "uriFilter": "http://localhost:8080/hello_.*",
        "actions": [{
          "name": "hello",
          "actionType": "SetDetail",
          "expression": "\"Hello World\""
        },{
          "name": "all",
          "actionType": "AddContent",
          "expression": "new String(values[0])"
        }]
      },{
        "nodeType": "Consumer",
        "direction": "Out",
        "uriFilter": "http://localhost:8080/hello_.*",
        "actions": [{
          "name": "all",
          "actionType": "AddContent",
          "expression": "new String(values[0])"
        }]
      },{
        "nodeType": "Producer",
        "direction": "In",
        "uriFilter": "http://localhost:8080/hello_.*",
        "actions": [{
          "name": "hello",
          "actionType": "SetDetail",
          "expression": "\"Hello World\""
        },{
          "name": "all",
          "actionType": "AddContent",
          "expression": "new String(values[0])"
        }]
      },{
        "nodeType": "Producer",
        "direction": "Out",
        "uriFilter": "http://localhost:8080/hello_.*",
        "actions": [{
          "name": "all",
          "actionType": "AddContent",
          "expression": "new String(values[0])"
        }]
      }]
    }
  }
}