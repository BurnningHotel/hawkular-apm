{
  "instrumentation": {
    "test": {
      "description": "Test instrumentation",
      "version": "1",
      "types": [{
        "type": "InstrumentService",
        "ruleName": "Test trace a method",
        "className": "org.hawkular.btm.tests.standalone.TestService",
        "methodName": "testOp",
        "parameterTypes": [
           "java.lang.String",
           "int"
        ],
        "serviceTypeExpression": "\"MyService\"",
        "operationExpression": "\"MyOperation\"",
        "requestValueExpressions": [
          "$1",
          "$2"
        ],
        "responseValueExpressions": [
          "$!"
        ]
      }]
    }
  }
}